<odoo>
    <record id="view_move_form_dreamwarez_dropdown" model="ir.ui.view">
        <field name="name">account.move.form.dreamwarez.dropdown</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            
            <!-- Create a dropdown menu for printing options -->
            <!-- Use a simpler approach first - single button -->
            <xpath expr="//header/button[@name='action_invoice_sent']" position="after">
                <button name="print_dreamwarez_invoice" 
                        type="object" 
                        string="Dreamwarez Invoice" 
                        class="btn-primary"
                        groups="account.group_account_invoice"
                        invisible="state != 'posted' or move_type not in ('out_invoice', 'out_refund')"/>
            </xpath>
            
        </field>
    </record>
</odoo>