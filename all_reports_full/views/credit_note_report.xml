<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="paperformat_credit_note" model="report.paperformat">
        <field name="name">Credit Note A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>


        <record id="action_report_credit_note_custom" model="ir.actions.report">
        <field name="name">Print Credit Note</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">all_reports_full.report_credit_note_document</field>
        <field name="report_file">all_reports_full.report_credit_note_document</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <!-- <field name="domain">[('move_type', '=', 'out_refund')]</field> -->
        <field name="print_report_name">'Credit Note - %s' % object.name</field>
        <field name="paperformat_id" ref="all_reports_full.paperformat_credit_note"/>
    </record>

<template id="report_credit_note_document">
    <t t-call="web.html_container">
        <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="o">
            <t t-if="o.move_type == 'out_refund'">

            <style>
                @page {
                    size: A4;
                    margin: 6mm;
                }

                body {
                    font-family: Arial, sans-serif;
                    font-size: 15px;
                    color: #000;
                }

                .cell {
                    border: 1px solid;
                    vertical-align: top;
                    font-size: 15px;
                    padding: 5px;
                }

                .center {
                    text-align: center;
                } 

                .right{
                    text-align: right;
                }

                .right-cell {
                    border: 1px solid #777;

                    line-height: 1.6;
                    vertical-align: top;
                    font-size: 15px;
                }
            </style>


            <t t-foreach="docs" t-as="doc">

               
                <t t-set="delivery_contact" t-value="False"/>
                <t t-foreach="doc.partner_id.child_ids" t-as="child">
                    <t t-if="child.type == 'delivery'">
                        <t t-set="delivery_contact" t-value="child"/>
                    </t>
                </t>
                <t t-if="not delivery_contact">
                    <t t-set="delivery_contact" t-value="doc.partner_id"/>
                </t>

               
                <t t-set="invoice_contact" t-value="False"/>
                <t t-foreach="doc.partner_id.child_ids" t-as="child">
                    <t t-if="child.type == 'invoice'">
                        <t t-set="invoice_contact" t-value="child"/>
                    </t>
                </t>
                <t t-if="not invoice_contact">
                    <t t-set="invoice_contact" t-value="doc.partner_id"/>
                </t>


                <div class="page">
                    <table style="width:100%; border-collapse:collapse; margin-bottom:8px;">
                        <tr>
                            <td style="
                                width:100%;
                                text-align:center;
                                font-size:22px;
                                font-weight:bold;
                            ">
                                Credit Note
                                <span style="
                                    font-size:14px;
                                    font-style:italic;
                                    font-weight:normal;
                                    margin-left:10px;
                                ">
                                    (ORIGINAL FOR RECIPIENT)
                                </span>
                            </td>
                            <td  style="
                                width:100%;
                                text-align:center;
                                font-size:22px;
                                font-weight:bold;
                            ">QR CODE

                            </td>
                        </tr>
                    </table>
                   
                    <table style="width:100%; border-collapse:collapse; margin-bottom:6px;">
                        <tr>
                            <td style="width:40%;">
                                <strong>IRN:</strong>
                                <t t-esc="doc.irn_number or 'Not Generated'"/><br/>
                                <strong>Ack No:</strong>
                                <t t-esc="doc.ack_number or 'Not Generated'"/><br/>
                                <strong>Ack Date:</strong>
                                <t t-if="doc.ack_date">
                                    <t t-esc="doc.ack_date.strftime('%d-%m-%Y %H:%M:%S')"/>
                                </t>
                                <t t-if="not doc.ack_date">Not Generated</t>
                            </td>
                        </tr>
                    </table>

                   
                    <table style="width:100%; border-collapse:collapse; border:1px solid #777; font-size:16px;">

                        <tr>
                            
                            <td rowspan="8" colspan="7" style="width:55%; vertical-align:top; border:1px solid #777; padding:3px;">

                                
                                <strong t-esc="doc.company_id.name"/><br/>
                                <t t-esc="doc.company_id.street"/><br/>
                                <t t-esc="doc.company_id.city"/> -
                                <t t-esc="doc.company_id.zip"/><br/>
                                GSTIN/UIN : <t t-esc="doc.company_id.vat"/><br/>
                                State Name : <t t-esc="doc.company_id.state_id.name"/>,
                                Code : <t t-esc="doc.company_id.state_id.l10n_in_tin"/><br/>
                                CIN : <t t-esc="doc.company_id.company_registry"/>

                                <div style="border-top:1px solid #777; "></div>

                                
                                <strong>Consignee (Ship to)</strong><br/>
                                <strong t-esc="delivery_contact.name"/><br/>
                                <t t-esc="delivery_contact.street"/><br/>
                                <t t-esc="delivery_contact.city"/> -
                                <t t-esc="delivery_contact.zip"/><br/>
                                GSTIN/UIN : <t t-esc="delivery_contact.vat"/><br/>
                                State Name : <t t-esc="delivery_contact.state_id.name"/>,
                                Code : <t t-esc="delivery_contact.state_id.l10n_in_tin"/>

                                <div style="border-top:1px solid #777;"></div>

                                
                                <strong>Buyer (Bill to)</strong><br/>
                                <strong t-esc="invoice_contact.name"/><br/>
                                <t t-esc="invoice_contact.street"/><br/>
                                GSTIN/UIN : <t t-esc="invoice_contact.vat"/><br/>
                                State Name : <t t-esc="invoice_contact.state_id.name"/><br/>
                                Place of Supply : <t t-esc="invoice_contact.state_id.name"/>

                            </td>

                            
                            <td style="border:1px solid #777; padding:5px;">
                               Credit Note No.  e-Way Bill No.: <br/><strong><t t-esc="doc.name"/><span></span></strong>
                            </td>
                            <td style="border:1px solid #777; padding:5px;">
                                Dated : <strong><t t-esc="doc.invoice_date"/></strong>
                            </td>
                        </tr>

                        <tr>
                            <!-- <td style="border:1px solid #777; padding:5px;">
                                
                                <strong>Delivery Note :</strong>
                                
                            </td> -->
                            <td style="border:1px solid #777; padding:5px;">
                         
                            </td>
                            <td style="border:1px solid #777; padding:5px;">
                                Mode / Terms of Payment :
                                <strong><t t-esc="doc.payment_terms_selection"/></strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="border:1px solid #777; padding:5px;">
                                Original Invoice No. &amp; Date :
                                <strong><t t-esc="doc.reversed_entry_id.name"/></strong>
                                <span> <span><b><t t-esc="doc.invoice_date or ''"/></b></span> </span>
                            </td>
                            <!-- <td style="border:1px solid #777; padding:5px;">
                                <strong>Other References :</strong>
                            </td> -->
                            <td style="border:1px solid #777; padding:5px;">
                                Other References :
                                <strong><t t-esc="doc.other_references or ''"/></strong>
                            </td>
                        </tr>

                        <tr>
                            <!-- <td style="border:1px solid #777; padding:5px;">
                                <strong>Buyers Order No.</strong>
                            </td> -->
                            <td style="border:1px solid #777; padding:5px;">
                                Buyers Order No:<br/>
                                <strong><t t-esc="doc.buyers_order_no or ''"/></strong>
                            </td>
                            <td style="border:1px solid #777; padding:5px;">
                                <!-- <strong>Date</strong> -->
                                Dated: <strong><br/><t t-esc="doc.credit_dated"/></strong>
                            </td>
                        </tr>

                        <tr>
                            <!-- <td style="border:1px solid #777; padding:5px;">
                                <strong>Dispatch Doc No :</strong>
                            </td> -->
                            <td style="border:1px solid #777; padding:5px;">
                                Dispatch Doc No:<br/>
                                <strong><t t-esc="doc.dispatch_doc_no or ''"/></strong>
                            </td>
                            <td style="border:1px solid #777; padding:5px;">
                            </td>
                        </tr>

                        <tr>
                            <td style="border:1px solid #777; padding:5px;">
                                Dispatched through:<strong><br/><t t-esc="doc.dispatched_through or ''"/></strong>
                            </td>
                            <td style="border:1px solid #777; padding:5px;">Destination<br/>
                                <b><t t-esc="doc.destination or ''"/></b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="border:1px solid #777; padding:5px;"><br/>
                                Terms of Delivery:<strong><t t-esc="doc.terms_of_delivery"/></strong>
                            </td>
                        </tr>

                    </table>

                    
                    <table style="width:100%; border-collapse:collapse; margin-bottom:10px;">
                        <thead>
                            <tr>
                                <th class="cell center" style="width: 5%;">SI No.</th>
                                <th class="cell" style="width: 40%;">Description of Goods</th>
                                <th class="cell center" style="width: 10%;">HSN/SAC</th>
                                <th class="cell center" style="width: 10%;">Qty</th>
                                <th class="cell center" style="width: 10%;">Rate</th>
                                <th class="cell center" style="width: 5%;">per</th>
                                <th class="cell center" style="width: 5%;">Disc %</th>
                                <th class="cell center" style="width: 15%;">Amount</th>
                            </tr>
                        </thead>

                        <tbody>
                            
                            <t t-set="i" t-value="0"/>
                            <t t-set="total_qty" t-value="0"/>
                            <t t-set="total_amount" t-value="0"/>

                            
                            <t t-foreach="doc.invoice_line_ids" t-as="line">
                                <t t-set="i" t-value="i + 1"/>
                                <t t-set="total_qty" t-value="total_qty + line.quantity"/>
                                <t t-set="total_amount" t-value="total_amount + line.price_subtotal"/>

                                <tr>
                                    <td class="cell center" t-esc="i"/>
                                
                                    <td class="cell">
                                        <strong t-esc="line.product_id.name"/>

                                        <t t-if="line.name and line.name != line.product_id.name">
                                            <br/>
                                            <t t-esc="line.name"/>
                                        </t>
                                    </td>
                                    <td class="cell center">
                                        <!-- <t t-esc="line.hsn_code or ''"/> -->
                                        <t t-esc="line.product_id.l10n_in_hsn_code or ''"/>
                                    </td>
                                    <td class="cell center">
                                        <t t-esc="line.quantity"/>
                                        <t t-esc="line.product_uom_id.name"/>
                                    </td>
                                    <td class="cell center">
                                        <span t-field="line.price_unit" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                    </td>
                                    <td class="cell center">
                                        <t t-esc="line.product_uom_id.name"/>
                                    </td>
                                    <td class="cell center">
                                        <t t-esc="line.discount"/>%
                                    </td>
                                    <td class="cell center">
                                       <span t-field="line.price_subtotal" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                    </td>
                                </tr>
                            </t>

                            
                            <tr  style="border-bottom:none;">
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                    <strong>TOTAL AMOUNT</strong>
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                    <strong t-esc="total_qty"/>  <strong t-esc="line.product_uom_id.name"/>
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell" style="border-bottom:none;"></td>

                                <td class="cell" style="border-bottom:none;">
                                   <strong t-esc="total_amount" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                </td>
                            </tr>

                            <tr  style="border-bottom:none;">
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                    <strong>CGST</strong>
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell" style="border-bottom:none;"></td>

                                <td class="cell" style="border-bottom:none;">
                                    <t t-esc="(doc.amount_tax / 2)" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                </td>
                            </tr>
                            <tr  style="border-bottom:none;">
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                    <strong>SGST</strong>
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell" style="border-bottom:none;"></td>

                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell " style="border-bottom:none;">
                                    <t t-esc="(doc.amount_tax / 2)" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                </td>
                            </tr>

                            <t t-set="cgst" t-value="doc.amount_tax / 2"/>
                            <t t-set="sgst" t-value="doc.amount_tax / 2"/>
                            <t t-set="total_taxable_amount" t-value="total_amount + cgst + sgst"/>

                            <tr  style="border-bottom:none;">
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                    <strong>TOTAL TAXABLE AMOUNT</strong>
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell right" style="border-bottom:none;">
                                </td>
                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell" style="border-bottom:none;"></td>

                                <td class="cell" style="border-bottom:none;"></td>
                                <td class="cell center" style="border-bottom:none;">
                                   <strong t-esc="total_taxable_amount" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                </td>
                            </tr>

                                            
                            <tr>
                                <td class="cell" colspan="6" style="border-bottom:none; border-right: none; padding:3px;">
                                    Amount Chargeable (in words):<br/>
                                    <strong>
                                        <t t-esc="doc.currency_id.amount_to_text(doc.amount_total)"/>
                                    </strong>
                                </td>
                                <td class="cell" colspan="2" style="text-align:right; border-left:none; border-bottom:none; padding:3px;">
                                    E and O.E</td>
                            </tr>
                            
                            <tr>
                                <td class="cell" colspan="8" style="padding:0; border:none;">
                                    <table style="width:100%; border-collapse:collapse; font-size:11px; border:none;">

                                        
                                        <tr>
                                            <th class="cell center" rowspan="2"  >HSN/SAC</th>
                                            <th class="cell center" rowspan="2" >Taxable<br/>Value</th>
                                            <th class="cell center" colspan="2" >CGST</th>
                                            <th class="cell center" colspan="2" >SGST / UTGST</th>
                                            <th class="cell center" rowspan="2" >Total Tax Amount</th>
                                        </tr>

                                        
                                        <tr>
                                            <th class="cell center">Rate</th>
                                            <th class="cell center">Amount</th>
                                            <th class="cell center">Rate</th>
                                            <th class="cell center">Amount</th>
                                        </tr>

                                        <t t-set="cgst_rate" t-value="0"/>
                                            <t t-set="sgst_rate" t-value="0"/>


                                            <t t-foreach="doc.line_ids.filtered(lambda l: l.tax_line_id)" t-as="tax_line">
                                            <t t-if="'CGST' in (tax_line.name or '')">
                                            <t t-set="cgst_rate" t-value="tax_line.tax_line_id.amount"/>
                                            </t>
                                            <t t-if="'SGST' in (tax_line.name or '')">
                                            <t t-set="sgst_rate" t-value="tax_line.tax_line_id.amount"/>
                                            </t>
                                        </t>
                                        <tr>
                                            <td class="cell center">
                                                <!-- <t t-esc="doc.invoice_line_ids and doc.invoice_line_ids[0].hsn_code or ''"/> -->
                                                <t t-esc="doc.invoice_line_ids and doc.invoice_line_ids[0].product_id.l10n_in_hsn_code or ''"/>

                                            </td>

                                            <td class="cell center">
                                                <span t-field="doc.amount_untaxed" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>

                                            <td class="cell center">
                                              <t t-esc="cgst_rate"/>%
                                            </td>
                                            <td class="cell center">
                                                <t t-esc="(doc.amount_tax / 2)" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>

                                            <td class="cell center">
                                              <t t-esc="sgst_rate"/>%
                                            </td>
                                            <td class="cell center">
                                                <t t-esc="(doc.amount_tax / 2)" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>

                                            <td class="cell center">
                                                <span t-field="doc.amount_tax" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="cell center">
                                                <strong>Total</strong>
                                            </td>

                                            <td class="cell center">
                                                <strong t-field="doc.amount_untaxed" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>

                                            <td class="cell center">
                                                
                                            </td>

                                            <td class="cell center">
                                                <strong t-esc="(doc.amount_tax / 2)" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>

                                            <td class="cell center">
                                                
                                            </td>

                                            <td class="cell center">
                                                <strong t-esc="(doc.amount_tax / 2)" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>

                                            <td class="cell center">
                                                <strong t-field="doc.amount_tax" t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                            </td>
                                        </tr>
                                        



                                    </table>
                                </td>
                            </tr>
                            
                            <tr>
                                <td colspan="8" style="
                                   
                                    border-left:1px solid ;
                                    border-right:1px solid;
                                    border-bottom:none;
                                    padding:3px;
                                ">
                                    Tax Amount (in words) :<br />
                                    <strong>
                                        <t t-esc="doc.currency_id.amount_to_text(doc.amount_tax)"/> Only
                                    </strong>
                                </td>
                            </tr>

                            
                            <tr>
                                
                                <td colspan="5" style="
                                    border-left:1px solid #777;
                                    border-right:none;
                                    border-top:none;
                                    border-bottom:none;
                                    padding:3px;
                                "></td>

                            <td colspan="4" style="
                                border-left:none;
                                border-top:none;
                                border-bottom:none;
                                border-right:1px solid #777;
                                padding:3px;
                                vertical-align:top;
                            ">
                                
                            </td>

                            </tr>

                            
                            <tr>
                                
                                <td colspan="4" style="
                                    border-left:1px solid #777;
                                    border-right:1px solid #777;
                                    border-top:none;
                                    border-bottom:none;
                                    padding:3px;
                                ">
                                    Company PAN No :<strong><t t-esc="doc.company_id.vat"/></strong>

                                    <!-- <strong>Company PAN No :</strong> -->
                                    
                                </td>

                               
                                <td colspan="5" style="
                                    
                                    border-left:1px solid #777;
                                    border-right:1px solid #777;
                                    border-top:1px solid #777;
                                    border-bottom:none;
                                    padding:3px;
                                    text-align:center;
                                ">
                                    <strong>for <t t-esc="doc.company_id.name"/></strong>
                                </td>
                            </tr>

                            
                            <tr>
                                
                                <td colspan="4" style="
                                    border-left:1px solid #777;
                                    border-right:1px solid #777;
                                    border-top:none;
                                    border-bottom:none;
                                    padding:3px;
                                    vertical-align:top;
                                ">
                                    
                                </td>

                                
                                <td colspan="5" style="
                                    border-left:1px solid #777;
                                    border-right:1px solid #777;
                                    
                                    border-bottom:none;
                                    padding:3px;
                                    text-align:center;
                                    vertical-align:bottom;
                                    height:70px;
                                ">
                                    <strong>Authorised Signatory</strong>
                                </td>
                            </tr>

                            
                            <tr>
                                <td colspan="8" style="
                                    border-left:1px solid #777;
                                    border-right:1px solid #777;
                                    border-bottom:1px solid #777;
                                    padding:0;
                                    height:0;
                                "></td>
                            </tr>


                        </tbody>
                    </table>






                    
                    <div style="text-align:center; margin-top:3px;">
                        <em>This is a Computer Generated Invoice</em>
                    </div>

                </div>
            </t>

            </t>
        </t>
    </t>
</template>


</odoo>
