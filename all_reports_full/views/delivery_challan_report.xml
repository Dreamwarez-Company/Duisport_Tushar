<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Custom Paper Format for Fixed Height -->
    <record id="paperformat_delivery_challan" model="report.paperformat">
        <field name="name">Delivery Challan A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>


    <!-- Report Action Definition -->
    <record id="action_report_delivery_challan" model="ir.actions.report">
        <field name="name">Delivery Challan</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">all_reports_full.report_delivery_challan_document</field>
        <field name="report_file">all_reports_full.report_delivery_challan_document</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Delivery_Challan_%s' % (object.name)</field>
        <field name="paperformat_id" ref="all_reports_full.paperformat_delivery_challan"/>
    </record>


