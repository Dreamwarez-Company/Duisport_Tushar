    <!-- Main Report Template -->
    <template id="report_delivery_challan_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <!-- <t t-call="web.basic_layout"> -->
    <!-- <t t-set="report_header" t-value="'all_reports_full.delivery_challan_header'"/>
